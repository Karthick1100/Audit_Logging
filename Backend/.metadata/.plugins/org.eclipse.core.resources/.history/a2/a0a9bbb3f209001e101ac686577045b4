package com.audit.audit.service;

import java.time.LocalDate;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.annotation.Qualifier;
import org.springframework.stereotype.Service;

import com.audit.audit.auditRepo.auditChangeRepo;
import com.audit.audit.auditRepo.auditRepo;
import com.audit.audit.model.Form;
import com.audit.audit.model.FormChange;

@Service
public class auditChangeService {
	
	
	auditChangeRepo acr;
	auditRepo ar;
	
	@Autowired
	auditChangeService(@Qualifier("acr") auditChangeRepo acr,@Qualifier("ar") auditRepo ar){
		this.acr=acr;
		this.ar=ar;
	}
	
	
	public void addFormChange(Form form) {
		Form returnedValue=ar.findFormById(form.getFormId());
		if(returnedValue==null) {
			form.setCreatedAt(LocalDate.now().toString());
			form.setFormName("Good form");
			form.setFormFeilds(new String[] {"karthick","Subramanian"});
			ar.save(form);
		}
		else{
			FormChange fc=new FormChange();
			fc.setChangedAt(LocalDate.now().toString());
			fc.setChangedBy("Karthick");
			fc.setChangeDescription("Just for fun");
			fc.setChangedFields(new String[] {"Yes","No"});
			fc.setId(form.getFormId());
			acr.save(fc);
		}
	}
	
	
	
}
